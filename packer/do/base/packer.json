{
  "variables": {
    "api_token": "{{env `DIGITALOCEAN_API_TOKEN`}}"
  },
  "builders": [
    {
      "type": "digitalocean",
      "api_token": "{{user `api_token`}}",
      "image": "ubuntu-20-04-x64",
      "region": "sfo3",
      "size": "1gb",
      "ssh_username": "root",
      "snapshot_name": "defn-home",
      "snapshot_regions": [ "sfo2", "sfo3", "nyc1", "nyc3" ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "../script/000-install-bare",
        "../script/001-install-base",
        "../script/100-install-sysdig",
        "../script/110-install-netdata",
        "../script/200-install-zerotier",
        "../script/201-install-tailscale",
        "../script/901-add-swap",
        "../script/900-update-kernel",
        "../script/901-install-jdk11",
        "../script/500-install-linuxbrew",
        "../script/990-defn-home",
        "../script/999-update"
      ]
    }
  ]
}
