{
  "variables": {
    "ami_name": "{{env `DEFN_PACKER_AMI_NAME`}}",
    "aws_region": "{{env `AWS_DEFAULT_REGION`}}",
    "filters_name": "{{env `DEFN_PACKER_FILTERS_NAME`}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{user `aws_region`}}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "{{user `filters_name`}}",
          "root-device-type": "ebs",
          "architecture": "x86_64"
        },
        "owners": [
          "self"
        ],
        "most_recent": true
      },
      "instance_type": "m5d.large",
      "spot_price": "auto",
      "ssh_username": "ec2-user",
      "ssh_interface": "public_ip",
      "ami_name": "{{user `ami_name`}}",
      "tags": {
        "Name": "{{user `ami_name`}}",
        "ManagedBy": "Packer"
      },
      "run_tags": {
        "Name": "{{user `ami_name`}}",
        "ManagedBy": "Packer"
      },
      "run_volume_tags": {
        "Name": "{{user `ami_name`}}",
        "ManagedBy": "Packer"
      },
      "snapshot_tags": {
        "Name": "{{user `ami_name`}}",
        "ManagedBy": "Packer"
      },
      "ami_description": "defn Amazon Linux Base",
      "associate_public_ip_address": "true"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "../a/roles",
      "destination": ".ansible/"
    },
    {
      "type": "ansible-local",
      "playbook_file": "../a/ami-base.yml"
    },
    {
      "type": "shell",
      "scripts": [
        "../script/001-install-base",
        "../script/004-install-ssm-agent",
        "../script/100-install-sysdig",
        "../script/200-install-zerotier",
        "../script/201-install-tailscale",
        "../script/500-install-linuxbrew",
        "../script/900-update-kernel",
        "../script/901-install-jdk11",
        "../script/901-add-swap",
        "../script/999-update"
      ]
    }
  ]
}
