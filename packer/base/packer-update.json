{
  "variables": {
    "ami_name": "{{env `DEFN_PACKER_AMI_NAME`}}",
    "aws_region": "{{env `AWS_DEFAULT_REGION`}}",
    "filters_name": "{{env `DEFN_PACKER_FILTERS_NAME`}}",
    "ami_regions": "{{env `DEFN_AMI_REGIONS`}}",
    "ami_users": "{{env `DEFN_AMI_USERS`}}",
    "kms_key_id": "{{env `DEFN_KMS_KEY_ID`}}",
    "region_kms_key_ids": "{{env `DEFN_REGION_KMS_KEY_IDS`}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{user `aws_region`}}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "{{user `filters_name`}}",
          "root-device-type": "ebs",
          "architecture": "x86_64"
        },
        "owners": [
          "self"
        ],
        "most_recent": true
      },
      "instance_type": "m5d.large",
      "spot_price": "auto",
      "ssh_username": "ec2-user",
      "ssh_interface": "public_ip",
      "ami_name": "{{user `ami_name`}}",
      "tags": {
        "Name": "{{user `ami_name`}}",
        "ManagedBy": "Packer"
      },
      "run_tags": {
        "Name": "{{user `ami_name`}}",
        "ManagedBy": "Packer"
      },
      "run_volume_tags": {
        "Name": "{{user `ami_name`}}",
        "ManagedBy": "Packer"
      },
      "snapshot_tags": {
        "Name": "{{user `ami_name`}}",
        "ManagedBy": "Packer"
      },
      "ami_description": "defn Amazon Linux Latest",
      "associate_public_ip_address": "true",
      "encrypt_boot": true,
      "kms_key_id": "{{user `kms_key_id`}}",
      "region_kms_key_ids": {
        "us-west-1": "{{user `kms_key_id`}}",
        "us-west-2": "{{user `kms_key_id`}}",
        "us-east-1": "{{user `kms_key_id`}}",
        "us-east-2": "{{user `kms_key_id`}}"
      },
      "ami_regions": "{{user `ami_regions`}}",
      "ami_users": "{{user `ami_users`}}"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "../a/roles",
      "destination": ".ansible/"
    },
    {
      "type": "ansible-local",
      "playbook_file": "../a/ami-base.yml"
    },
    {
      "type": "shell",
      "scripts": [
        "../script/999-update"
      ]
    }
  ]
}
